
<div class="h-100 p-5 bg-light border rounded-3">
<h1 class="display-4">
  <%= @friend.first_name %>
  <%= @friend.last_name %>
</h1>
  <p>
    <%= @friend.email %> |
    <%= @friend.phone %> |
    <%= @friend.twitter %> |
  </p>
  <br>
  <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-primary" %>
  <td><%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
  <%= link_to 'Back', friends_path, class:"btn btn-primary" %>
</div>




